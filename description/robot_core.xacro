<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

    <xacro:include filename="inertial_macros.xacro"/>

    <material name="white">
    <color rgba="1 1 1 1"/>
    </material>

    <material name="orange">
        <color rgba="1 0.3 0.1 1"/>
    </material>

    <material name="blue">
        <color rgba="0.2 0.2 1 1"/>
    </material>

    <material name="black">
        <color rgba="0 0 0 1"/>
    </material>

    <!-- BASE LINK -->

    <link name="base_link">

    </link>

    <!-- CHASSIS LINK -->

    <joint name="chassis_joint" type="fixed">
        <parent link="base_link"/>
        <child link="chassis"/>
        <origin xyz="-0.05 0 0"/>
    </joint>

    <link name="chassis">
        <visual>
            <origin xyz="0.105 0 0.0625" rpy="0 0 0"/>
            <geometry>
                <box size="0.21 0.085 0.125"/>
            </geometry>
            <material name="white"/>
        </visual>
        <collision>
            <origin xyz="0.105 0 0.0625" rpy="0 0 0"/>
            <geometry>
                <box size="0.21 0.085 0.125"/>
            </geometry>
        </collision>
        <xacro:inertial_box mass="0.5" x="0.105" y="0" z="0.0625">
            <origin xyz="0.105 0 0.0625" rpy="0 0 0"/>
        </xacro:inertial_box>
    </link>

    <!-- WHEELS -->

    <!-- REAR LEFT WHEEL -->

    <joint name="rear_left_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="rear_left_wheel"/>
        <origin xyz="0 0.0425 0" rpy="-${pi/2} 0 0"/>
        <axis xyz="0 0 1"/>
    </joint>

    <link name="rear_left_wheel">
        <visual>
            <geometry>
                <cylinder length="0.026" radius="0.03" />
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <geometry>
                <cylinder length="0.026" radius="0.03" />
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" radius="0.03" length="0.026">
            <origin xyz="0 0 0" rpy="-${pi/2} 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <!-- REAR RIGHT WHEEL -->

    <joint name="rear_right_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="rear_right_wheel"/>
        <origin xyz="0 -0.0425 0" rpy="${pi/2} 0 0"/>
        <axis xyz="0 0 -1"/>
    </joint>

    <link name="rear_right_wheel">
        <visual>
            <geometry>
                <cylinder length="0.026" radius="0.03" />
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <geometry>
                <cylinder length="0.026" radius="0.03" />
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" radius="0.03" length="0.026">
            <origin xyz="0 0 0" rpy="-${pi/2} 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <!-- FRONT LEFT WHEEL -->

    <joint name="front__left_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="front__left_wheel"/>
        <origin xyz="0.1 0.0425 0" rpy="-${pi/2} 0 0"/>
        <axis xyz="0 0 1"/>
    </joint>

    <link name="front__left_wheel">
        <visual>
            <geometry>
                <cylinder length="0.026" radius="0.03" />
            </geometry>
            <material name="orange"/>
        </visual>
        <collision>
            <geometry>
                <cylinder length="0.026" radius="0.03" />
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" radius="0.03" length="0.026">
            <origin xyz="0 0 0" rpy="-${pi/2} 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <!-- FRONT RIGHT WHEEL -->

    <joint name="front__right_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="front__right_wheel"/>
        <origin xyz="0.1 -0.0425 0" rpy="${pi/2} 0 0"/>
        <axis xyz="0 0 -1"/>
    </joint>

    <link name="front__right_wheel">
        <visual>
            <geometry>
                <cylinder length="0.026" radius="0.03" />
            </geometry>
            <material name="orange"/>
        </visual>
        <collision>
            <geometry>
                <cylinder length="0.026" radius="0.03" />
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" radius="0.03" length="0.026">
            <origin xyz="0 0 0" rpy="-${pi/2} 0 0"/>
        </xacro:inertial_cylinder>
    </link>



</robot>